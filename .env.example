# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Qdrant Configuration
QDRANT_URL=http://localhost:6333

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=rag_db

# Ollama Configuration
OLLAMA_URL=http://localhost:11434

# Docling Configuration
DOCLING_CUDA_DEVICE=1

# vLLM Sleep Mode Configuration
# 슬립 모드 활성화 여부 (true/false)
VLLM_SLEEP_ENABLED=false
# vLLM 개발 모드 엔드포인트 URL (sleep/wake API 접근용)
VLLM_DEV_URL=http://localhost:8000
# Idle timeout (초) - 마지막 요청 후 이 시간이 지나면 슬립
VLLM_SLEEP_IDLE_TIMEOUT=300
# 체크 주기 (초) - 백그라운드 태스크가 idle 상태를 확인하는 주기
VLLM_SLEEP_CHECK_INTERVAL=60
